{
  "name": "praha-challenge-ddd",
  "version": "1.0.0",
  "main": "dist/index.ts",
  "repository": "git@github.com:tsubasa1122/praha-challenge-ddd.git",
  "author": "tsubasa1122",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist/*",
    "tsc": "tsc",
    "build": "npm-run-all clean tsc",
    "start": "STAGE=production node .",
    "dev": "dotenv -e .local.env -- ts-node-dev --respawn src/index.ts",
    "check-types": "tsc --noEmit",
    "eslint": "eslint src/**/*.ts",
    "eslint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write 'src/**/*.{js,ts,json}'",
    "lint": "npm-run-all eslint check-types",
    "lint:fix": "npm-run-all eslint:fix check-types format",
    "prepare": "husky install",
    "migrate:dev": "dotenv -e .local.env -- prisma migrate dev --preview-feature",
    "db:seed:dev": "dotenv -e .local.env -- prisma db seed --preview-feature",
    "model-generate": "prisma generate",
    "migrate:dev:reset": "dotenv -e .local.env -- prisma migrate reset --preview-feature",
    "migrate:test": "dotenv -e .test.env -- prisma migrate reset --force --preview-feature",
    "migrate:prd": "prisma migrate deploy --preview-feature",
    "test:unit": "dotenv -e .test.env -- jest",
    "test:integration": "yarn migrate:test && dotenv -e .test.env -- jest -c ./jest.integration.config.js --runInBand"
  },
  "devDependencies": {
    "@types/express": "4.17.13",
    "@types/jest": "^26.0.24",
    "@types/node": "16.3.1",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "faker": "^5.5.3",
    "husky": ">=6",
    "jest": "^27.0.6",
    "lint-staged": ">=10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "prisma": "^2.27.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.3",
    "ts-node": "10.1.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "4.3.5"
  },
  "dependencies": {
    "@prisma/client": "^2.27.0",
    "dotenv": "^10.0.0",
    "express": "4.17.1"
  },
  "huskey": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.ts": "bash -c tsc --noEmit",
    "*.{js,ts,json}": "prettier --write"
  }
}
